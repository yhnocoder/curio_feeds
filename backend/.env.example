# Cloudflare Proxy Worker
PROXY_WORKER_URL=https://curio-feeds-proxy.your-subdomain.workers.dev
PROXY_AUTH_TOKEN=your-secret-token-here

# Cloudflare R2 (S3-compatible API)
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=curio-feeds

# API Server
API_PORT=3000

# Data retention
ITEM_RETENTION_DAYS=180

# Feed scheduling
DEFAULT_FETCH_INTERVAL_MINUTES=30
MAX_CONCURRENT_FEEDS=5
